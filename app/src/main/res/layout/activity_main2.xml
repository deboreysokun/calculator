<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:layout_width="141dp"
            android:layout_height="37dp"
            android:id="@+id/a2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/a1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <TextView
            android:layout_width="138dp"
            android:layout_height="38dp"
            android:id="@+id/a1" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <Button
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:onClick="calcu"/>
    <Button
            android:text="DIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mul" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:onClick="calcu"/>
    <Button
            android:text="SUB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/add" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:onClick="calcu"/>
    <Button
            android:text="MULTI"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/mul" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/sub" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:onClick="calcu"/>
</androidx.constraintlayout.widget.ConstraintLayout>