<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="111dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/num2"
            android:hint="Number 2"
            android:layout_marginEnd="68dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="68dp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/num1"
            android:hint="Number 1" android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/num2"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.437"/>
    <TextView
            android:text="Result"
            android:layout_width="136dp"
            android:layout_height="43dp"
            android:id="@+id/result"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/num2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Reset"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:id="@+id/reset"
            android:onClick="submit"
            android:layout_marginBottom="272dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result" app:layout_constraintVertical_bias="0.801"
            app:layout_constraintStart_toEndOf="@+id/calcu" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Calculate"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:id="@+id/calcu"
            android:onClick="submit"
            android:layout_marginBottom="300dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/result"
            app:layout_constraintVertical_bias="0.983"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
